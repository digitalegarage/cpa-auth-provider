<!-- views/layout/default/alert.ejs -->

<% if(user && user.language && user.language !== language) { %>
<div class="container language-error">
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
        <%= __('ALERT_LANGUAGE_1') %>
        <a id="updateProfileLanguage" class="link-set-language" data-lang="<%= language %>" href="#" class="alert-link">
            <%= __('ALERT_LANGUAGE_2', {default_language_of_the_idp: language.toUpperCase()}) %>
        </a>
        <%= __('ALERT_LANGUAGE_3') %> <a id="updateCookieLanguage" class="link-set-language"
                                         data-lang="<%= user.language %>" href="#" class="alert-link">
            <%= __('ALERT_LANGUAGE_4', {default_language_of_the_user: user.language.toUpperCase()}) %>
        </a>
    </div>
</div>
<% } %>

<script type="text/javascript">
    (function () {
        if (Cookies.get("languageError")) {
            $('.alert').hide();
        }
    })();
</script>

