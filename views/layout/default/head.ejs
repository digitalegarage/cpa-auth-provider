<!-- views/layout/default/head.ejs -->

<% if ( config.broadcaster && config.broadcaster.title !== "" ) { %>
<title><%= config.broadcaster.title %></title>
<% } else { %>
<title><%= __('LAYOUT_DEFAULT_HEAD_CROSS_PLATFORM_AUTHENTICATION_TITLE') %></title>
<% } %>

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Bootstrap -->
<link rel="stylesheet" href="<%= config.urlPrefix %>/bootstrap/dist/css/bootstrap.min.css">
<link href="<%= config.urlPrefix %>/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">

<link href="<%= config.urlPrefix %>/assets/css/main.css" rel="stylesheet">

<% if ( broadcaster && broadcaster.name === "rts" ) { %>
<%- include ../rts/head %>
<% } %>

<link href="<%= config.urlPrefix %>/assets/css/profile.css" rel="stylesheet">
<link href="<%= config.urlPrefix %>/assets/css/font-awesome.min.css" rel="stylesheet">

<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
<![endif]-->

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="<%= config.urlPrefix %>/js/jquery.min.js"></script>
<script src="<%= config.urlPrefix %>/jquery-form/jquery.form.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="<%= config.urlPrefix %>/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="<%= config.urlPrefix %>/cookie/src/js.cookie.js"></script>

<% if (config.password.quality_check == 'owasp'){ %>
<script src='<%= config.urlPrefix %>/owasp/owasp-password-strength-test.js'></script>
<% } else if (config.password.quality_check == 'simple'){ %>
<script src="<%= config.urlPrefix %>/assets/js/password-score.js"></script>
<% } %>

<script src='<%= config.urlPrefix %>/moment/moment.js'></script>

<script type="text/javascript"
        src="<%= config.urlPrefix %>/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="<%= config.urlPrefix %>/bootstrap-datepicker/js/locales/bootstrap-datepicker.fr.js"
        charset="UTF-8"></script>
<script type="text/javascript" src="<%= config.urlPrefix %>/bootstrap-datepicker/js/locales/bootstrap-datepicker.de.js"
        charset="UTF-8"></script>

<script>
    var userLogged = <% if (user) { %>true<% } else { %>false<% } %>,
        urlPrefix = '<%= config.urlPrefix %>',
        siteKey = '<%= config.limiter.parameters.recaptcha.site_key %>';
</script>

<script type="text/javascript" src="<%= config.urlPrefix %>/assets/js/lang.js"></script>
<script type="text/javascript" src="<%= config.urlPrefix %>/assets/js/load.js"></script>